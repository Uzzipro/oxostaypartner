<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    tools:context=".activities.ui.bookings.BookingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size_default"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/ivBack"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="VectorDrawableCompat" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:textSize="@dimen/toolbar_title_size"
            android:layout_height="match_parent"
            android:id="@+id/toolbarTitle"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/colorWhite"
            android:paddingLeft="@dimen/_30_dp"
            android:paddingStart="@dimen/_30_dp"
            android:gravity="center_vertical"
            android:text="My Bookings"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activity_bg"
        android:layout_marginTop="@dimen/toolbar_size_default"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:id="@+id/llMain"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llToggleBooking"
            android:orientation="horizontal"
            android:weightSum="1">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/btUpcomingBookings"
                android:textColor="@color/colorBlack"
                android:background="@drawable/bookings_bt_left"
                android:text="@string/upcoming_bookings"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ivVerticalLine"
                app:srcCompat="@drawable/ic_verticalline"
                tools:ignore="VectorDrawableCompat" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/bookings_bt_right"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:id="@+id/btBookingsHistory"
                android:text="@string/bookings_history"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
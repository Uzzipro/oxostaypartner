<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200_dp"
    android:background="@drawable/dialogbackground"
    android:padding="@dimen/_10_dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorWhite"
        android:layout_marginTop="@dimen/_10_dp"
        android:padding="@dimen/_5_dp"
        android:textSize="@dimen/_15_dp"
        android:fontFamily="@font/robotomedium"
        android:text="@string/register_success"
        app:layout_constraintTop_toBottomOf="@id/btDissmiss"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btDissmiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_style"
        android:layout_marginTop="@dimen/_15_dp"
        android:text="Dismiss"
        android:textAllCaps="false"
        android:paddingHorizontal="@dimen/_15_dp"
        android:textColor="@color/colorWhite"
        android:layout_marginVertical="@dimen/_20_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPincode" />

</androidx.constraintlayout.widget.ConstraintLayout>
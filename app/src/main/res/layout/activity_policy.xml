<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.ui.policy.PolicyActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size_default"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/ivBack"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="VectorDrawableCompat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:textSize="@dimen/toolbar_title_size"
            android:layout_height="match_parent"
            android:id="@+id/toolbarTitle"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/colorWhite"
            android:paddingLeft="@dimen/_30_dp"
            android:paddingStart="@dimen/_30_dp"
            android:gravity="center_vertical"
            android:text="Policy"/>
    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:text="Policy Updates"
        android:fontFamily="@font/robotomedium"
        android:padding="@dimen/_15_dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/tvTitlePolicy"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePolicy"
        android:text="@string/dummy_text"
        android:padding="@dimen/_15_dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/tvPolicyUpdate"/>

</androidx.constraintlayout.widget.ConstraintLayout>
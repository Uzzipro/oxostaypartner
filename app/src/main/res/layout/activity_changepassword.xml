<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".activities.ui.changepassword.ChangepasswordActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size_default"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/ivBack"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="VectorDrawableCompat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:textSize="@dimen/toolbar_title_size"
            android:layout_height="match_parent"
            android:id="@+id/toolbarTitle"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/colorWhite"
            android:paddingLeft="@dimen/_30_dp"
            android:paddingStart="@dimen/_30_dp"
            android:gravity="center_vertical"
            android:text="Change Password"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_margin="@dimen/_10_dp"
        android:text="Enter your new Password:"
        android:textColor="@color/colorBlack"
        app:fontFamily="@font/robotoregular"
        android:id="@+id/tvChangePassword"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:background="@drawable/etstyle"
        android:layout_margin="@dimen/_10_dp"
        android:padding="@dimen/_10_dp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"
        android:id="@+id/etEnterNewPassword"
        app:layout_constraintTop_toBottomOf="@id/tvChangePassword"/>




    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEnterNewPassword"
        android:layout_margin="@dimen/_10_dp"
        android:text="Confirm Password:"
        android:textColor="@color/colorBlack"
        app:fontFamily="@font/robotoregular"
        android:id="@+id/tvChangePasswordConfirm"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:background="@drawable/etstyle"
        android:layout_margin="@dimen/_10_dp"
        android:padding="@dimen/_10_dp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"
        android:id="@+id/etConfirmnewPassword"
        app:layout_constraintTop_toBottomOf="@id/tvChangePasswordConfirm"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/etConfirmnewPassword"
        android:layout_marginHorizontal="@dimen/_70_dp"
        android:id="@+id/btChangePass"
        android:layout_marginTop="@dimen/_20_dp"
        android:background="#000000"
        android:text="Change"/>
</androidx.constraintlayout.widget.ConstraintLayout>